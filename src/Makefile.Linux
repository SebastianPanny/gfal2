# Edit the following 2 lines to put the actual path

XERCES = /opt/xerces-2_4_0
GSOAP = /opt/gsoap-linux-2.3
GSOAP_IMP = /opt/gsoap-linux-2.2.3

# To enable RFIO support, uncomment the next 2 lines
RFIOFLG = -DGFAL_ENABLE_RFIO
RFIOINC = -I/usr/local/include/shift

# To enable DCAP support, uncomment the next 2 lines
DCAPFLG = -DGFAL_ENABLE_DCAP
DCAPINC = -I/opt/d-cache/dcap/include

# To add support for a new protocol, define a new flag (and possibly a new
# header path) and add it to PROTOFLG
PROTOFLG = $(RFIOFLG) $(RFIOINC) $(DCAPFLG) $(DCAPINC)

# To enable secure mode, uncomment the next 4 lines
SECFLG = -DGFAL_SECURE
GLOBUS_FLAVOUR=gcc32dbg
GLOBUS_LIBS=-L/opt/globus/lib -lglobus_gssapi_gsi_$(GLOBUS_FLAVOUR) -lglobus_gss_assist_$(GLOBUS_FLAVOUR)
SECLIB = -lcgsi_plugin_gsoap_2.3 $(GLOBUS_LIBS)

# End of the part to be edited

CC = cc -g -fPIC -D_LARGEFILE64_SOURCE
SHLIBLDFLAGS = -shared

CLASSPATH = $(GSOAP_IMP)/wsdlcpp:$(XERCES)/xmlParserAPIs.jar:$(XERCES)/xercesImpl.jar
GFAL_OBJS = checkprotolib.o gfal.o lrc_ifce.o mds_ifce.o rmc_ifce.o se_ifce.o srm_ifce.o srmC.o srmClient.o stdsoap2.o

all: libgfal.a libgfal.so gfal_testdir gfal_testread gfal_testrw gfal_teststat gfal_testunlink

libgfal.a: $(GFAL_OBJS)
	ar rv $@ $?
libgfal.so: $(GFAL_OBJS)
	ld $(SHLIBLDFLAGS) -o $@ $(GFAL_OBJS) $(SECLIB) -lc -lldap -ldl

checkprotolib.o: gfal.h
	$(CC) -c $(PROTOFLG) checkprotolib.c
gfal.o: gfal.h gfal_api.h gfal_constants.h
	$(CC) -c $(SECFLG) gfal.c
lrc_ifce.o: lrcH.h lrcStub.h lrcC.c lrcClient.c soapEdgLocalReplicaCatalogService+.nsmap
	$(CC) -c -I$(GSOAP) $(SECFLG) -DWITH_NOGLOBAL lrc_ifce.c
rmc_ifce.o: rmcH.h rmcStub.h rmcC.c rmcClient.c soapEdgReplicaMetadataCatalogService+.nsmap
	$(CC) -c -I$(GSOAP) $(SECFLG) -DWITH_NOGLOBAL rmc_ifce.c
se_ifce.o: seH.h seStub.h seC.c seClient.c soapEdgSeWebserviceService+.nsmap
	$(CC) -c -I$(GSOAP) $(SECFLG) -DWITH_NOGLOBAL se_ifce.c
srm_ifce.o: srmH.h srmStub.h soapSRMServerV1.nsmap
	$(CC) -c -I$(GSOAP) $(SECFLG) srm_ifce.c
srmC.o:
	$(CC) -c -I$(GSOAP) srmC.c
srmClient.o:
	$(CC) -c -I$(GSOAP) srmClient.c
stdsoap2.o: $(GSOAP)/stdsoap2.c
	$(CC) -c -I$(GSOAP) $(GSOAP)/stdsoap2.c

soapEdgLocalReplicaCatalogService+.nsmap: soapEdgLocalReplicaCatalogService.nsmap
	sed 's/struct Namespace namespaces/struct Namespace namespaces_lrc/' $? > $@
soapEdgReplicaMetadataCatalogService+.nsmap: soapEdgReplicaMetadataCatalogService.nsmap
	sed 's/struct Namespace namespaces/struct Namespace namespaces_rmc/' $? > $@
soapEdgSeWebserviceService+.nsmap: soapEdgSeWebserviceService.nsmap
	sed 's/struct Namespace namespaces/struct Namespace namespaces_se/' $? > $@

lrcH.h lrcStub.h lrcC.c lrcClient.c soapEdgLocalReplicaCatalogService.nsmap: edg-local-replica-catalog.h
	$(GSOAP)/soapcpp2 -c -p lrc edg-local-replica-catalog.h
rmcH.h rmcStub.h rmcC.c rmcClient.c soapEdgReplicaMetadataCatalogService.nsmap: edg-replica-metadata-catalog.h
	$(GSOAP)/soapcpp2 -c -p rmc edg-replica-metadata-catalog.h
seH.h seStub.h seC.c seClient.c soapEdgSeWebserviceService.nsmap: edg-se-webservice.h
	$(GSOAP)/soapcpp2 -c -p se edg-se-webservice.h
srmH.h srmStub.h srmC.c srmClient.c soapSRMServerV1.nsmap: srm.v1.1.h
	$(GSOAP)/soapcpp2 -c -p srm srm.v1.1.h

edg-local-replica-catalog.h: edg-local-replica-catalog.wsdl
	java -classpath $(CLASSPATH) wsdlcpp -c edg-local-replica-catalog.wsdl
edg-replica-metadata-catalog.h: edg-replica-metadata-catalog.wsdl
	java -classpath $(CLASSPATH) wsdlcpp -c edg-replica-metadata-catalog.wsdl
edg-se-webservice.h: edg-se-webservice.wsdl
	java -classpath $(CLASSPATH) wsdlcpp -c edg-se-webservice.wsdl
srm.v1.1.h: srm.v1.1.wsdl
	java -classpath $(CLASSPATH) wsdlcpp -c srm.v1.1.wsdl

gfal_testdir: gfal_api.h libgfal.so
	$(CC) -o gfal_testdir gfal_testdir.c -L. -lgfal $(SECLIB)
gfal_testread: gfal_api.h libgfal.so
	$(CC) -o gfal_testread gfal_testread.c -L. -lgfal $(SECLIB)
gfal_testrw: gfal_api.h libgfal.so
	$(CC) -o gfal_testrw gfal_testrw.c -L. -lgfal $(SECLIB)
gfal_teststat: gfal_api.h libgfal.so
	$(CC) -o gfal_teststat gfal_teststat.c -L. -lgfal $(SECLIB)
gfal_testunlink: gfal_api.h libgfal.so
	$(CC) -o gfal_testunlink gfal_testunlink.c -L. -lgfal $(SECLIB)

