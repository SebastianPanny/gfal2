# See http://public.eu-egee.org/partners/ for details on
# the copyright holders.
# For license conditions see the license file or
# http://www.apache.org/licenses/LICENSE-2.0
#
# Authors:
#      Akos Frohner <Akos.Frohner@cern.ch>
#
# Poor man's adapter to work around ETICS newline and backslash handling problems.

basedir=$(cd $(dirname $0); echo $PWD)

USAGE="configure --with-version=...  --with-release=... --with-globus-prefix=...  --with-globus-thr-flavor=...  --with-globus-nothr-flavor=...  --with-gsoap-location=...  --with-gsoap-version=...  --with-cgsi-gsoap-location=...  --with-swig-location=...  --with-lfc-location=...  --with-dpm-location=...  --with-dcap-location=...  --with-voms-location=..."

TEMP=$(getopt -o h --long help,with-version:,with-release:,with-globus-prefix:,with-globus-thr-flavor:,with-globus-nothr-flavor:,with-gsoap-location:,with-gsoap-version:,with-cgsi-gsoap-location:,with-swig-location:,with-lfc-location:,with-dpm-location:,with-dcap-location:,with-voms-location: -- "$@")
eval set -- "$TEMP"

echo "$@" >${basedir}/config.status

# some sensible defaults
if [ $(uname -m) = 'x86_64' ]; then
    GLOBUS_FLAVOUR=gcc64dbg
    GLOBUS_FLAVOUR_PTHR=gcc64dbgpthr
else
    GLOBUS_FLAVOUR=gcc32dbg
    GLOBUS_FLAVOUR_PTHR=gcc32dbgpthr
fi
GSOAP_VERSION=2.7.6b
VERSION=$(awk -F'[ \t=]+' '/module.version/ { print $2 }' ${basedir}/project/version.properties)
RELEASE=$(awk -F'[ \t=]+' '/module.age/ { print $2 }' ${basedir}/project/version.properties)
RELEASE_SUFFIX='.'$(${basedir}/get-platform-os)

while true; do
    case "$1" in
        -h|--help)
            echo $USAGE
            exit
            ;;
        --with-version)
            shift
            VERSION="$1"
            shift
            ;;  
        --with-release)
            shift
            RELEASE="$1"
            shift
            ;;  
        --with-globus-prefix)
            shift
            GLOBUS_LOCATION="$1"
            shift
            ;;  
        --with-globus-thr-flavor)
            shift
            GLOBUS_FLAVOUR_PTHR="$1"
            shift
            ;;  
        --with-globus-nothr-flavor)
            shift
            GLOBUS_FLAVOUR="$1"
            shift
            ;; 
        --with-gsoap-location)
            shift
            GSOAP_LOCATION="$1"
            shift
            ;;
        --with-gsoap-version)
            shift
            GSOAP_VERSION="$1"
            shift
            ;;  
        --with-cgsi-gsoap-location)
            shift
            CGSI_GSOAP_LOCATION="$1"
            shift
            ;;  
        --with-swig-location)
            shift
            SWIG_LOCATION="$1"
            shift
            ;;  
        --with-lfc-location)
            shift
            LFC_LOCATION="$1"
            shift
            ;;  
        --with-dpm-location)
            shift
            DPM_LOCATION="$1"
            shift
            ;;  
        --with-dcap-location)
            shift
            DCAP_LOCATION="$1"
            shift
            ;;
        --with-voms-location)
            shift
            VOMS_LOCATION="$1"
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            echo "Unknown option '$1'"
            exit 2
            ;;
    esac
done


GSOAP_MAJOR_MINOR_VERSION=$(echo ${GSOAP_VERSION} | cut -d . -f1,2)

cat >Makefile <<EOF
TOP_SRC_DIR=${basedir}
SRCDIR=${basedir}/src
VERSION=${VERSION}

GSOAP_LOCATION=${GSOAP_LOCATION:-/usr/local}
GLOBUS_LOCATION=${GLOBUS_LOCATION:-/opt/globus}
GLOBUS_FLAVOUR=${GLOBUS_FLAVOUR}
GLOBUS_FLAVOUR_PTHR=${GLOBUS_FLAVOUR_PTHR}
LFC_LOCATION=${LFC_LOCATION:-/opt/lcg}
DPM_LOCATION=${DPM_LOCATION:-/opt/lcg}
DCAP_LOCATION=${DCAP_LOCATION:-/opt/d-cache}
CGSI_GSOAP_LOCATION=${CGSI_GSOAP_LOCATION:-/opt/glite}
CGSI_GSOAP_VERSION=gsoap_${GSOAP_MAJOR_MINOR_VERSION}
VOMS_LOCATION=${VOMS_LOCATION:-/opt/glite}
SWIG_LOCATION=${SWIG_LOCATION:-/usr}

include \$(SRCDIR)/Makefile.Linux
EOF

sed -e "s/@VERSION@/${VERSION}/g" \
    -e "s/@RELEASE@/${RELEASE}/g" \
    -e "s/@RELEASE.SUFFIX@/${RELEASE_SUFFIX}/g" \
    -e "s/@GSOAP.VERSION@/${GSOAP_MAJOR_MINOR_VERSION}/g" \
    -e "s/@GLOBUS.DBG.NOTHR.FLAVOUR/${GLOBUS_FLAVOUR}/g" \
    -e "s/@GLOBUS.DBG.THR.FLAVOUR@/${GLOBUS_FLAVOUR_PTHR}/g" \
    ${basedir}/project/glite-data-gfal.spec.template >glite-data-gfal.spec

