# Poor man's adapter to work around ETICS newline and backslash handling problems.

mkdir -p build

cat >build/Makefile <<EOF
SRCDIR=${SRCDIR}
VERSION=${VERSION}

GSOAP_LOCATION=${GSOAP_LOCATION}
GLOBUS_LOCATION=${GLOBUS_LOCATION}
GLOBUS_FLAVOUR=${GLOBUS_FLAVOUR}
GLOBUS_FLAVOUR_PTHR=${GLOBUS_FLAVOUR_PTHR}
LFC_LOCATION=${LFC_LOCATION}
DPM_LOCATION=${DPM_LOCATION}
DCAP_LOCATION=${DCAP_LOCATION}
CGSI_GSOAP_LOCATION=${CGSI_GSOAP_LOCATION}
CGSI_GSOAP_VERSION=${CGSI_GSOAP_VERSION}
SWIG_LOCATION=${SWIG_LOCATION}

include \$(SRCDIR)/Makefile.Linux
EOF

